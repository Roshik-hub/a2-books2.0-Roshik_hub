
BoxLayout:
    orientation: "horizontal"
    padding: 10
    spacing: 10

    # LEFT SIDE
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.35
        spacing: 10

        Spinner:
            id: sort_spinner
            text: "Title"
            values: ["Title", "Author", "Pages"]
            on_text: app.handle_sort(self.text)

        TextInput:
            id: title_input
            hint_text: "Title"
            multiline: False

        TextInput:
            id: author_input
            hint_text: "Author"
            multiline: False

        TextInput:
            id: pages_input
            hint_text: "Pages"
            multiline: False
            input_filter: "int"

        BoxLayout:
            spacing: 10
            Button:
                text: "Add Book"
                on_release: app.handle_add_book()
            Button:
                text: "Clear"
                on_release: app.clear_inputs()

    # RIGHT SIDE
    BoxLayout:
        orientation: "vertical"
        spacing: 10

        Label:
            id: top_status
            text: app.status_top

        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: books_box
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 60

        Label:
            id: bottom_status
            text: app.status_bottom
            size_hint_y: 0.2
